<section
  id="skills"
  class="relative w-full overflow-hidden bg-[#262336] text-white"
>
  <!-- Imagen de cabecera estilo GTA con recorte SVG -->
  <div class="relative w-full">
    <div class="clip-diagonal w-full">
      <img
        id="skills-image"
        src="/bg-skills3.png"
        alt="Imagen Skills estilo GTA"
        class="w-full h-auto object-cover"
      />
